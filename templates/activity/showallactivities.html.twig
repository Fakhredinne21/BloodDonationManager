{% extends 'base.html.twig' %}

{% block body %}
    <h1>All Activities</h1>
    <table class="table mx-auto" style="width: 95%;">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Date</th>
            <th scope="col">Status</th>
            <th scope="col">Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for activity in activities %}
            <tr>
                <th scope="row">{{ activity.id }}</th>
                <td>{{ activity.date|date('Y-m-d') }}</td>
                <td>{{ activity.status ? 'Active' : 'Inactive' }}</td>
                <td>
                    <a href="{{ path('activity_edit', {'id': activity.id}) }}" class="btn btn-primary">Edit</a>
                    <button onclick="deleteActivity({{ activity.id }})" class="btn btn-danger">Delete</button>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">No activities found.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}