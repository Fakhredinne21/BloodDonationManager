{% extends 'base.html.twig' %}

{% block body %}
    <h1>Add New Activity</h1>
    <form action="{{ path('activity_new') }}" method="post">
        <div class="form-group">
            <label for="activity_date">Date</label>
            <input type="date" id="activity_date" name="activity_date" class="form-control">
        </div>
        <div class="form-group">
            <label for="activity_status">Status</label>
            <select id="activity_status" name="activity_status" class="form-control">
                <option value="1">Active</option>
                <option value="0">Inactive</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Add Activity</button>
    </form>
{% endblock %}